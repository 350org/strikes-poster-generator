<form class="m-editor" id="meme-editor-view">
  <h1 class="m-supertitle meta">#ClimateStrike</h1>
  <h1 id="m-title"><span class="text-highlight bg-green" style="background-color:#4ee58b;"><%= current_page.data.title %></span></h1>

  <div id="editor-options-image" class="content-pane editor-options-section">
    <h3>Paper Size</h3>
    <select class="aspect-ratio" id="aspect-ratio">
      <option value="" disabled>Paper Size</option>
    </select>
  </div>

  <div id="editor-options-text" class="content-pane editor-options-section">
    <!--
      <h2 class="editor-section-header">Text</h2>
    -->

    <h3><label for="headline">Title</label></h3>
    <input id="headline" name="headline" type="text" value="" style="font-size:1.3rem;">
    <div class="editor-slider editor-slider-fontsize">
      <label for="font-size">Title Text Size</label>
      <input id="title-font-size" type="range" max="190" min="18" step="1" value="80">
    </div>

    <h3>Event Info</h3>
    <h3 style="display:none;"><label for="date-time">Date/Time</label></h3>
    <input id="date-time" name="date-time" type="text" value="">

    <h3 style="display:none;"><label for="location">Location</label></h3>
    <input id="location" name="location" type="text" value="">

    <h3 style="display:none;"><label for="location">Location, line 2</label></h3>
    <input id="location-2" name="location-2" type="text" value="">


    <h3><label for="date-time">Website URL</label></h3>
    <input id="website-url" name="website-url" type="text" value="">


    <!--
    <h3><label for="font-family">Font</label></h3>
    <select class="font-family" id="font-family">
      <option value="" disabled>Select a font</option>
    </select>
    -->

    <h3><label for="text-alignment">Text Alignment</label></h3>
    <select class="text-align" id="text-align">
      <option value="" disabled>Select alignment</option>
    </select>


    <!--
    <div class="m-editor__fontcolor" id="font-color">
      <h3>Font Color</h3>
      <ul class="checkbox-group">
        <li><label><input type="radio" name="font-color" value="#000"> Default</label></li>
      </ul>
    </div>
    -->


    <!--
    <div class="checkbox-group text-shadow">
      <h3>
      <input id="text-shadow" name="shadow" type="checkbox">
      <label for="text-shadow">Add text shadow for better legibility.</label>
    </div>
    -->

  </div>


</form>
